{
    "name": "tamojuno/integration-api-php-sdk",
    "description": "Juno SDK for PHP based on API v2",
    "license": "MIT",
    "authors": [
        {
            "name": "Guilherme Sales",
            "email": "guilherme.sales@juno.com.br",
            "homepage": "https://github.com/guilhermaosales"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2.5",
        "guzzlehttp/guzzle": "^7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "8.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "TamoJuno\\": "src",
            "TamoJuno\\Test\\": "tests"
            }
    },
    "scripts": {
        "test": "phpunit",
        "code-style": "./vendor/bin/phpcs --standard=PSR2 --exclude=PSR1.Methods.CamelCapsMethodName src/"
    }
}
